<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Login</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN"
      crossorigin="anonymous"
    />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" />
    <style>
      .body {
        padding: 0px;
        margin: 0px;
        background: #ecececc4;
      }
      .btn-color {
        background-color: #2c5194ad;
        color: #fff;
      }

      .btn-color:hover {
        background-color: #2c5194;
        color: #fff;
      }

      .profile-image-pic {
        height: 200px;
        width: 200px;
        object-fit: cover;
      }

      .cardbody-color {
        background-color: #ebf2fa;
      }

      .notification {
        border-radius: 10px 0px 0px 10px;
        position: fixed;
        top: 60px;
        right: 0;
        width: fit-content;
        padding: 12px;
        text-align: center;
        font-size: 18px;
      }
    </style>
  </head>
  <body class="body">
    <div class="container">
      <div class="row">
        <div class="col-md-6 offset-md-3">
          <div class="card my-4">
            <form method="POST" class="card-body cardbody-color p-lg-5">
              <h2 class="text-center text-dark" style="margin-top: -20px">Login</h2>
              <div class="text-center">
                <img src="https://cdn.pixabay.com/photo/2016/03/31/19/56/avatar-1295397__340.png" class="img-fluid profile-image-pic img-thumbnail rounded-circle my-3" width="200px" alt="profile" />
              </div>

              <div class="mb-3">
                <input required type="text" class="form-control" id="username" name="username" placeholder="User Name" />
              </div>
              <div class="mb-3">
                <input required type="password" class="form-control" id="password" name="password" placeholder="Password" />
              </div>
              <div class="text-center"><button type="submit" class="btn btn-color px-5 mb-5 w-100">Login</button></div>
              <div class="form-text text-center mb-5 text-dark">Not Registered? <a href="/user/register" class="text-dark fw-bold"> Create an Account</a></div>
            </form>
          </div>
        </div>
      </div>
    </div>
    <!-- noti -->
    <div id="noti">
      <% if(success_msg != ''){ %>
      <div class="notification" style="background-color: rgb(58 160 255 / 55%)"><%= success_msg %></div>
      <% } %> <% if(error_msg != ''){ %>
      <div class="notification" style="background-color: rgba(255, 0, 0, 0.555)"><%= error_msg %></div>
      <% } %> <% if(error != ''){ %>
      <div class="notification" style="background-color: rgba(255, 0, 0, 0.555)"><%= error %></div>
      <% } %>
    </div>
    <!-- noti -->

    <script>
      document.addEventListener("DOMContentLoaded", () => {
        const noti = document.getElementById("noti");
        setTimeout(() => {
          noti.remove();
        }, 3000);
      });
    </script>
  </body>
</html>
